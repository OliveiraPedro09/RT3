{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "rt3-engine/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "rt3-engine/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
